package br.com.java.rest;

import java.util.List;

import javax.annotation.PostConstruct;
import javax.ws.rs.Consumes;
import javax.ws.rs.DELETE;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.PUT;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;


import br.com.java.dao.VeiculoDao;
import br.com.java.entity.Veiculo;

@Path("/veiculos")
public class VeiculoService {

	private VeiculoDao veiculoDao;
	
	@PostConstruct
	private void init() {
		veiculoDao = new VeiculoDao();
	}
	
	@GET
	@Path("/list")
	@Produces(MediaType.APPLICATION_JSON)
	public List<Veiculo> listarVeiculo() {
		List<Veiculo> lista = null;
		try {
			lista = veiculoDao.listarTodos();
		} catch (Exception e){
			e.printStackTrace();
			e.getMessage();
		}
		
		return lista;
	}
	
	@POST
	@Path("/add")
	@Consumes(MediaType.APPLICATION_JSON)
	@Produces(MediaType.TEXT_PLAIN)
	public String addVeiculo(Veiculo veiculo) {
		String msg = "";

		System.out.println(veiculo.getModelo());

		try {
			veiculoDao.inserir(veiculo);

			msg = "Veiculo add com sucesso!";
		} catch (Exception e) {
			msg = "Erro ao add a Veiculo!";
			e.printStackTrace();
		}

		return msg;
	}
	
	@GET
	@Path("/get/{id}")
	@Consumes(MediaType.TEXT_PLAIN)
	@Produces(MediaType.APPLICATION_JSON)
	public Veiculo buscarPorId(@PathParam("id") int idVeiculo) {
		Veiculo veiculo = null;
		try {
			veiculo = veiculoDao.selecionar(idVeiculo);
		} catch (Exception e) {
			e.printStackTrace();
		}

		return veiculo;
	}
	
	@PUT
	@Path("/edit")
	@Consumes(MediaType.APPLICATION_JSON)
	@Produces(MediaType.TEXT_PLAIN)
	public String editarNota(Veiculo veiculo) {
		String msg = "";
		
		System.out.println(veiculo.getModelo());
		
		try {
			veiculoDao.atualizar(veiculo);
			
			msg = "Veiculo editado com sucesso!";
		} catch (Exception e) {
			msg = "Erro ao editar a veiculo!";
			e.printStackTrace();
		}
		
		return msg;
	}
	
	@DELETE
	@Path("/delete/{id}")
	@Consumes(MediaType.APPLICATION_JSON)
	@Produces(MediaType.TEXT_PLAIN)
	public String removerNota(@PathParam("id") int idVeiculo) {
		String msg = "";
		
		try {
			veiculoDao.excluir(idVeiculo);
			
			msg = "Veiculo removido com sucesso!";
		} catch (Exception e) {
			msg = "Erro ao remover o veiculo!";
			e.printStackTrace();
		}
		
		return msg;
	}
}
